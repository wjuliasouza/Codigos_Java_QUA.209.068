
public class Variaveis {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		/*
		 * para comentários de linhas múltiplas
		 */
		int numero;
		numero = 27;
		double decimal = 10.50;
		int testeNumero = (int) 50.25;
		double testeNovoNumero = 10;
		double peso = 52.00; 

		// aspas duplas para strings
		String nome = "Julia Wanderley";
		// aspas simples para char
		char sexo = 'F';
		// booleanos = valores verdadeiros ou falsos
		boolean verdadeiro = true;
		boolean falso = false; 
		

		System.out.println(numero);
		System.out.println(decimal);
		System.out.println(testeNumero);
		System.out.println(testeNovoNumero);
		System.out.println(sexo);
		System.out.println(nome);
		System.out.println(verdadeiro);
		System.out.println(falso);
		System.out.print("nome:");
		System.out.println("Júlia");
		// para organizar o código, usamos o ctrl+shift+F
		
		System.out.println("******");
		System.out.println("Meu nome é: " + nome);
		System.out.println("Meu sexo é:" + sexo);
		System.out.println("Minha idade é:" + numero);
		System.out.println("Meu peso é:" + peso "kg");

	}

}
